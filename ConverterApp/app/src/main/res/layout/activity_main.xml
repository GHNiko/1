<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mezme.converterapp.MainActivity">

    <EditText
        android:id="@+id/hufNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter HUF to get USD"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hufNum"
        android:layout_alignStart="@+id/hufNum"
        android:layout_below="@+id/hufNum"
        android:onClick="clickIt"
        android:text="Convert"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="70dp" />

    <ImageView
        android:id="@+id/numPic"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        app:srcCompat="@drawable/num" />

</RelativeLayout>
