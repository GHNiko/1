<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mezme.lowerhigher.MainActivity">

    <EditText
        android:id="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/intro"
        android:layout_alignStart="@+id/intro"
        android:layout_below="@+id/guess"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Type a number!"
        android:inputType="number"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/clickMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/numberText"
        android:layout_alignStart="@+id/numberText"
        android:layout_below="@+id/numberText"
        android:onClick="clickMe"
        android:text="Guess" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:text="I'm thinking of  number between 1 and 20."
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/darker_gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/numberText"
        android:layout_alignStart="@+id/numberText"
        android:layout_below="@+id/intro"
        android:layout_marginTop="12dp"
        android:text="Can You guess it?"
        android:textColor="@android:color/black"
        android:textSize="24sp" />
</RelativeLayout>
